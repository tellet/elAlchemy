WindowManager:
    MainWindow:
    IngredientsOnlyWindow:
    IngredientsSelectionWindow:
    EffectsOnlyWindow:
    BothEffectsWindow:
    BothIngredientsWindow:
    NoCocktailsWindow:
    EffectsDictionaryWindow:
    HealDictionaryWindow:


<MyLabel@Label>:
    text: root.text if hasattr(root, 'text') else ''
    font_size: self.height/3

<MyButton@Button>:
    text: root.text if hasattr(root, 'text') else ''
    font_size: self.height/3


<WindowManager>:
    id: screen_manager
    name: "screen_manager"

    MainWindow:
        id: main_window
        name: "main_window"
        manager: screen_manager

        BoxLayout:
            name: "1"
            orientation: "horizontal"
            size_hint: 1, .33
            pos_hint: {"top":1.0}
            MyButton:
                id: main_ings_only_btn
                background_normal: "images/water.png"
                size_hint: .5, 1
                pos_hint:{"top":1.0, "left":1.0}
                on_release:
                    app.root.current = "ingredients_only_window"
                    app.root.transition.direction = 'left'
            MyButton:
                id: main_both_btn
                background_normal: "images/chem.png"
                size_hint: .5, 1
                pos_hint:{"top":1.0, "right":1.0}
                on_release:
                    app.root.current = "both_effects_window"
                    app.root.transition.direction = 'left'

        BoxLayout:
            name: "2"
            orientation: "horizontal"
            size_hint: 1, .33
            pos_hint:{"center_y":0.5}
            MyButton:
                id: main_effects_only_btn
                background_normal: "images/shopopalo.png"
                size_hint: .5, 1
                pos_hint:{"top":1.0, "left":1.0}
                on_release:
                    app.root.current = "effects_only_window"
                    app.root.transition.direction = 'left'

            MyButton:
                id: main_exit_btn
                text: "Выйти"
                size_hint: .5, 1
                pos_hint:{"top":1.0, "right":1.0}
                background_color: (1, 2, 1, 3)
                on_press: exit()
        BoxLayout:
            name: "3"
            orientation: "horizontal"
            size_hint: 1, .33
            pos_hint: {"bottom":1.0}
            MyButton:
                id: main_test_btn
                background_normal: "images/skull.png"
                size_hint: .5, 1
                pos_hint:{"top":1.0, "left":1.0}
                background_color: (1, 2, 1, 3)
                on_press:
                    app.root.current = "heal_dictionary_window"
                    app.root.transition.direction = 'left'

            MyButton:
                id: main_effects_dict_btn
                background_normal: "images/notes.png"
                size_hint: .5, 1
                pos_hint:{"top":1.0, "right":1.0}
                background_color: (1, 2, 1, 3)
                on_press:
                    app.root.current = "effects_dictionary_window"
                    app.root.transition.direction = 'left'

    EffectsOnlyWindow:
        id: effects_only_window
        name: "effects_only_window"
        manager: screen_manager
        GridLayout:
            id: effects_only_root_grid
            cols:1
            MyButton:
                id: both_back_btn
                text: "На Главную"
                size_hint: 1, .1
                pos_hint:{"bottom":1.0}
                background_color: (1, 2, 1, 3)
                on_release:
                    app.root.current = "main_window"
                    app.root.transition.direction = 'right'

    IngredientsOnlyWindow:
        id: ingredients_only_window
        name: "ingredients_only_window"
